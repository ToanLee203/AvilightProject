@page
@model AnviLightCode.Pages.User.LoginModel
@{
}
<section id="login" class="py-5 my-5 leaf-pattern-overlay position-relative">
    <div class="corner-pattern-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-form p-4" style="background-color: var(--light-color); border-radius: 8px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
                    <div class="section-header align-center">
                        <div class="title">
                            <span>Chào mừng trở lại</span>
                        </div>
                        <h2 class="section-title">Đăng nhập</h2>
                    </div>
                    <form class="mt-4" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Nhập email của bạn" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Nhập mật khẩu" required>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
                        </div>
                        <div class="btn-wrap text-center">
                            <button type="submit" class="btn btn-outline-accent btn-accent-arrow btn-full">
                                Đăng nhập <i class="icon icon-ns-arrow-right"></i>
                            </button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
                    }

                    <p class="text-center mt-3">
                        Chưa có tài khoản? <a href="/User/Register" class="text-accent">Đăng ký ngay</a>
                    </p>
                    <p class="text-center">
                        <a href="#" class="text-muted small">Quên mật khẩu?</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>