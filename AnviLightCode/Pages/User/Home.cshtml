                                        </figure>
                                        <figcaption>
                                            <h3>@item.TenSanPham</h3>
                                            @*                                             <div class="item-price">@item.Gia?.ToString("N0") ₫</div> *@
                                        </figcaption>
                                    </div>
                                </a>
                            </div>
                        }

