<section id="popular-books" class="bookshelf py-5 my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header align-center">
                    <div class="title">
                        <span>Các mặt hàng hiện có</span>
                    </div>
                    <h2 class="section-title">Đèn thông dụng</h2>
                </div>

                <ul class="tabs">
                    <li data-tab-target="#tat-ca" class="active tab">Tất cả</li>
                    @foreach (var loai in Model.DanhSachLoaiSanPham)
                    {
                        <li data-tab-target="#@loai.TenLoai.ToLower().Replace(" ", "-")" class="tab">@loai.TenLoai</li>
                    }
                </ul>

                <div class="tab-content">
                    <!-- Tab "Tất cả" -->
                    <div id="tat-ca" data-tab-content class="active">
                        <div class="row">
                            @foreach (var product in Model.DanhSachSanPham)
                            {
                                <div class="col-md-3">
                                    <a href="/User/ProductDetail?id=@product.MaSanPham" class="text-decoration-none">
                                        <div class="product-item">
                                            <figure class="product-style">
                                                <img src="@product.HinhAnh" alt="@product.TenSanPham" class="product-item" />
                                                <button type="button" class="add-to-cart" data-product-id="@product.MaSanPham">
                                                    Xem chi tiết
                                                </button>
                                            </figure>
                                            <figcaption>
                                                <h3>@product.TenSanPham</h3>
                                                <span>@product.MoTa</span>
                                                @* <div class="item-price">@product.Gia?.ToString("N0") ₫</div> *@
                                            </figcaption>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Các tab động theo danh mục -->
                    @foreach (var loai in Model.DanhSachLoaiSanPham)
                    {
                        <div id="@loai.TenLoai.ToLower().Replace(" ", "-")" data-tab-content>
                            <div class="row">
                                @foreach (var product in Model.DanhSachSanPham.Where(p => p.MaLoaiSanPham == loai.MaLoaiSanPham))
                                {
                                    <div class="col-md-3">
                                        <a href="/User/ProductDetail?id=@product.MaSanPham" class="text-decoration-none">
                                            <div class="product-item">
                                                <figure class="product-style">
                                                    <img src="@product.HinhAnh" alt="@product.TenSanPham" class="product-item" />
                                                    <button type="button" class="add-to-cart" data-product-id="@product.MaSanPham">
                                                        Xem chi tiết
                                                    </button>
                                                </figure>
                                                <figcaption>
                                                    <h3>@product.TenSanPham</h3>
                                                    <span>@product.MoTa</span>
                                                    @* <div class="item-price">@product.Gia?.ToString("N0") ₫</div> *@
                                                </figcaption>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div><!--inner-tabs-->
        </div>
    </div>
</section>

