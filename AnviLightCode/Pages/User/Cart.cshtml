@page
@model AnviLightCode.Pages.User.CartModel
@{
}
<section id="cart" class="py-5 my-5 leaf-pattern-overlay">
    <div class="corner-pattern-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="section-header align-center">
                    <div class="title">
                        <span>Đơn hàng của bạn</span>
                    </div>
                    <h2 class="section-title">Giỏ hàng</h2>
                </div>

                <!-- Danh sách sản phẩm trong giỏ hàng -->
                <div class="cart-items">
                    <div class="row">
                        <div class="col-md-8">
                            <!-- Sản phẩm 1 -->
                            <div class="cart-item mb-4 border-bottom pb-4">
                                <div class="row align-items-center">
                                    <!-- Hình ảnh -->
                                    <div class="col-md-2 col-3">
                                        <img src="~/stylecommon/images/tab-item1.jpg" alt="Đèn Trung Thu Rằm" class="img-fluid">
                                    </div>
                                    <!-- Thông tin sản phẩm -->
                                    <div class="col-md-5 col-9">
                                        <h3 class="item-title mb-2">Đèn Trung Thu Rằm</h3>
                                        <p class="mb-1">Kích thước: Nhỏ</p>
                                        <p class="mb-1">Màu sắc: Đỏ</p>
                                        <a href="#" class="text-muted small">Xóa</a>
                                    </div>
                                    <!-- Số lượng -->
                                    <div class="col-md-3 col-6">
                                        <div class="quantity d-flex align-items-center">
                                            <button class="btn btn-outline-dark btn-small">-</button>
                                            <input type="number" value="1" min="1" class="form-control mx-2 text-center" style="width: 60px;">
                                            <button class="btn btn-outline-dark btn-small">+</button>
                                        </div>
                                    </div>
                                    <!-- Giá -->
                                    <div class="col-md-2 col-6 text-end">
                                        <div class="item-price">400,000 ₫</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sản phẩm 2 -->
                            <div class="cart-item mb-4 border-bottom pb-4">
                                <div class="row align-items-center">
                                    <div class="col-md-2 col-3">
                                        <img src="~/stylecommon/images/product-item2.jpg" alt="Đèn Lồng Hoa Sen" class="img-fluid">
                                    </div>
                                    <div class="col-md-5 col-9">
                                        <h3 class="item-title mb-2">Đèn Lồng Hoa Sen</h3>
                                        <p class="mb-1">Kích thước: Trung</p>
                                        <p class="mb-1">Màu sắc: Vàng</p>
                                        <a href="#" class="text-muted small">Xóa</a>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <div class="quantity d-flex align-items-center">
                                            <button class="btn btn-outline-dark btn-small">-</button>
                                            <input type="number" value="2" min="1" class="form-control mx-2 text-center" style="width: 60px;">
                                            <button class="btn btn-outline-dark btn-small">+</button>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-6 text-end">
                                        <div class="item-price">380,000 ₫</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tóm tắt đơn hàng -->
                        <div class="col-md-4">
                            <div class="order-summary p-4" style="background-color: var(--light-color);">
                                <h3 class="section-title divider mb-4">Đơn hàng</h3>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Tạm tính</span>
                                    <span>1,160,000 ₫</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Thuế (10%)</span>
                                    <span>116,000 ₫</span>
                                </div>
                                <div class="d-flex justify-content-between mb-3 border-top pt-3">
                                    <strong>Tổng cộng</strong>
                                    <strong>1,276,000 ₫</strong>
                                </div>
                                <div class="btn-wrap">
                                    <a href="#" class="btn btn-outline-accent btn-accent-arrow btn-full">
                                        Thanh toán <i class="icon icon-ns-arrow-right"></i>
                                    </a>
                                </div>
                                <div class="btn-wrap mt-3">
                                    <a href="#" class="btn btn-outline-light btn-full">
                                        Tiếp tục mua sắm
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Thông báo khi giỏ hàng trống -->
                <div class="cart-empty text-center" style="display: none;">
                    <p>Giỏ hàng của bạn đang trống.</p>
                    <div class="btn-wrap">
                        <a href="#" class="btn btn-outline-accent btn-accent-arrow">
                            Tiếp tục mua sắm <i class="icon icon-ns-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>